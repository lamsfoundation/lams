<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.peerreview.model.Peerreview"
        table="tl_laprev11_peerreview"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Peerreview.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.peerreview.model.PeerreviewUser"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="lockWhenFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="showRatingsLeftForUser"
            type="boolean"
            update="true"
            insert="true"
            column="show_ratings_left_for_user"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
        />
        
        <property 
        	name="maximumRates" 
        	type="int" 
        	update="true" 
        	insert="true" 
        	column="maximum_rates"
        />
        
        <property 
        	name="minimumRates" 
        	type="int" 
        	update="true" 
        	insert="true" 
        	column="minimum_rates"
        />
        
		<property 
        	name="maximumRatesPerUser" 
        	type="int" 
        	update="true" 
        	insert="true" 
        	column="maximum_rates_per_user"
        />

        <property
            name="selfReview"
            type="boolean"
            update="true"
            insert="true"
            column="self_review"
        />

        <property
            name="notifyUsersOfResults"
            type="boolean"
            update="true"
            insert="true"
            column="notify_users_of_results"
        />
        
        <set 
        	name="ratingCriterias" 
        	lazy="true" 
        	inverse="false" 
        	cascade="all" 
        	sort="unsorted" 
        	order-by="order_id asc">
        	<key 
        		column="tool_content_id" 
        		property-ref="contentId">
            </key>
            <one-to-many 
            	class="org.lamsfoundation.lams.rating.model.RatingCriteria"
            />
		</set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Peerreview.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
