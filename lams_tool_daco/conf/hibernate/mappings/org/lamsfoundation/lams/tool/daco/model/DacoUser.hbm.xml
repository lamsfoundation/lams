<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.daco.model.DacoUser"
        table="tl_ladaco10_users"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-DacoUser.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="userId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="user_id"
            length="20"
        />

        <property
            name="lastName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="last_name"
            length="255"
        />

        <property
            name="firstName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="first_name"
            length="255"
        />

        <property
            name="loginName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="login_name"
        />

        <many-to-one
            name="session"
            class="org.lamsfoundation.lams.tool.daco.model.DacoSession"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="UserToSession"
            column="session_uid"
        />

        <many-to-one
            name="daco"
            class="org.lamsfoundation.lams.tool.daco.model.Daco"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="UserToDaco"
            column="content_uid"
        />

        <property
            name="sessionFinished"
            type="boolean"
            update="true"
            insert="true"
            column="session_finished"
        />

        <set
            name="answers"
            lazy="false"
            inverse="true"
            cascade="none"
            sort="unsorted"
            order-by="record_id asc, uid asc"
            outer-join="true"
        >

            <key
                column="user_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.daco.model.DacoAnswer"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-DacoUser.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>