<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.daco.model.DacoQuestion"
        table="tl_ladaco10_questions"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-DacoQuestion.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
        />

        <many-to-one
            name="createBy"
            class="org.lamsfoundation.lams.tool.daco.model.DacoUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="QuestionToUser"
            column="create_by"
        />

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="required"
            type="boolean"
            update="true"
            insert="true"
            column="is_required"
        />

        <property
            name="type"
            type="short"
            update="true"
            insert="true"
            column="question_type"
        />

        <property
            name="min"
            type="java.lang.Float"
            update="true"
            insert="true"
            column="min_constraint"
        />

        <property
            name="max"
            type="java.lang.Float"
            update="true"
            insert="true"
            column="max_constraint"
        />

        <property
            name="digitsDecimal"
            type="java.lang.Short"
            update="true"
            insert="true"
            column="digits_decimal"
        />

        <property
            name="summary"
            type="java.lang.Short"
            update="true"
            insert="true"
            column="summary"
        />

        <set
            name="answerOptions"
            lazy="false"
            cascade="all"
            sort="unsorted"
            order-by="sequence_num asc"
        >

            <key
                column="question_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.daco.model.DacoAnswerOption"
            />

        </set>

        <many-to-one
            name="daco"
            class="org.lamsfoundation.lams.tool.daco.model.Daco"
            cascade="none"
            outer-join="auto"
            update="false"
            insert="false"
            foreign-key="QuestionToDaco"
            column="content_uid"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-DacoQuestion.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>