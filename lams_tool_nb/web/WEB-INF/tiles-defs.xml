<tiles-definitions>
<!-- ============= template Definitions ====================== -->
	<definition name=".baseDef" path="/template/template.jsp">
		<put name="header" value="/header.jsp"/>
		<put name="content" value="/template/baseContent.jsp" />	
		<put name="footer" value="/footer.jsp"/>	
	</definition>

<!-- ============= Exception Page Definitions ====================== -->	
	<definition name=".message" path="/template/learnerTemplate.jsp" >
		<put name="content" value="/message.jsp" />	
		<put name="contentMobile" value="/learning/mobile/message.jsp" />
	</definition>
	
<!-- ============= Noticeboard Learner Page Definitions ====================== -->	
	<definition name=".learnerContent"  path="/template/learnerTemplate.jsp" >
		<put name="content" value="/learnerContent.jsp" />
		<put name="contentMobile" value="/learning/mobile/learnerContent.jsp" />	
	</definition>
	<definition name=".defineLater"  path="/template/learnerTemplate.jsp" >
		<put name="content" value="/defineLater.jsp" />	
		<put name="contentMobile" value="/learning/mobile/defineLater.jsp" />
	</definition>
	<definition name=".reflectOnActivity"  path="/template/learnerTemplate.jsp" >
		<put name="content" value="/reflect.jsp" />	
		<put name="contentMobile" value="/learning/mobile/reflect.jsp" />
	</definition>
</tiles-definitions>