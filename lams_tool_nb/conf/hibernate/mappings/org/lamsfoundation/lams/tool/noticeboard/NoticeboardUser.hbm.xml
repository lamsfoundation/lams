<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.noticeboard.NoticeboardUser"
        table="tl_lanb11_user"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-NoticeboardUser.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="fullname"
            type="java.lang.String"
            update="true"
            insert="true"
            column="fullname"
            length="255"
        />

        <many-to-one
            name="nbSession"
            class="org.lamsfoundation.lams.tool.noticeboard.NoticeboardSession"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="nb_session_uid" 
            />
        </many-to-one>

        <property
            name="userId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="user_id"
            length="20"
            not-null="true"
        />

        <property
            name="username"
            type="java.lang.String"
            update="true"
            insert="true"
            column="username"
            length="255"
        />

        <property
            name="userStatus"
            type="java.lang.String"
            update="true"
            insert="true"
            column="user_status"
            length="50"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-NoticeboardUser.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>