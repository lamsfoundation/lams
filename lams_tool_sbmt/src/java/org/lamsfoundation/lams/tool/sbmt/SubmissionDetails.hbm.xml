<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.sbmt.SubmissionDetails"
        table="tl_lasbmt11_submission_details"
    >

        <id
            name="submissionID"
            column="submission_id"
            type="java.lang.Long"
        >
            <generator class="identity">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SubmissionDetails.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="filePath"
            type="java.lang.String"
            update="true"
            insert="true"
            column="filePath"
            length="250"
        />

        <property
            name="fileDescription"
            type="java.lang.String"
            update="true"
            insert="true"
            column="fileDescription"
            length="250"
        />

        <property
            name="dateOfSubmission"
            type="java.util.Date"
            update="true"
            insert="true"
            column="date_of_submission"
            length="19"
        />

        <property
            name="uuid"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="uuid"
            length="20"
        />

        <property
            name="versionID"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="version_id"
            length="20"
        />

        <one-to-one
            name="report"
            class="org.lamsfoundation.lams.tool.sbmt.SubmitFilesReport"
            cascade="all"
            outer-join="auto"
            constrained="false"
            foreign-key="report_id"
        />

        <many-to-one
            name="submitFileSession"
            class="org.lamsfoundation.lams.tool.sbmt.SubmitFilesSession"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="session_id"
        />

        <many-to-one
            name="learner"
            class="org.lamsfoundation.lams.tool.sbmt.Learner"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="learner_id"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SubmissionDetails.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
