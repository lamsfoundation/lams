<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="SbmtPedagogicalPlannerForm"
      type="org.lamsfoundation.lams.tool.sbmt.form.SubmitFilesPedagogicalPlannerForm"
    />
    <form-bean
      name="learnerForm"
      type="org.lamsfoundation.lams.tool.sbmt.form.LearnerForm"
    />
    <form-bean
      name="reflectionForm"
      type="org.lamsfoundation.lams.tool.sbmt.form.ReflectionForm"
    />
    <form-bean
      name="sbmtMarkForm"
      type="org.lamsfoundation.lams.tool.sbmt.form.MarkForm"
    />
    <form-bean
      name="SbmtAuthoringForm"
      type="org.lamsfoundation.lams.tool.sbmt.form.AuthoringForm"
    />

<form-bean name="SbmtMonitoringForm" type="org.apache.struts.action.DynaActionForm">

	<form-property name="toolSessionID"
				   type="java.lang.Long"/>
	<form-property name="toolContentID"
				   type="java.lang.Long"/>
	<form-property name="userID"
				   type="java.lang.Long"/>		

	<form-property name="currentTab"
				   type="java.lang.String"/>
	<form-property name="method"
				   type="java.lang.String"/>
</form-bean>
  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <global-exceptions>
  <exception
    handler="org.lamsfoundation.lams.web.util.CustomStrutsExceptionHandler"
    key="error.system"
    path="/error.jsp"
    scope="request"
    type="java.lang.Exception"/>
</global-exceptions>

  <!-- ========== Global Forward Definitions =================================== -->
  <!--
    Define your forwards in a file called global-forwards.xml and place
    it in your merge directory.
  -->

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/authoring"
      type="org.lamsfoundation.lams.tool.sbmt.web.AuthoringAction"
      name="SbmtAuthoringForm"
      scope="request"
      input="/authoring/authoring.jsp"
      parameter="dispatch"
      unknown="false"
      validate="true"
    >
      <forward
        name="success"
        path="/authoring/authoring.jsp"
        redirect="false"
      />
      <forward
        name="instructionFileList"
        path="/authoring/parts/instructionfilelist.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/learner"
      type="org.lamsfoundation.lams.tool.sbmt.web.LearnerAction"
      name="learnerForm"
      scope="request"
      input="/learner/sbmtlearner.jsp"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="success"
        path="/learner/sbmtlearner.jsp"
        redirect="false"
      />
      <forward
        name="defineLater"
        path="/learner/definelater.jsp"
        redirect="false"
      />
      <forward
        name="submissionDeadline"
        path="/learner/submissionDeadline.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/pedagogicalPlanner"
      type="org.lamsfoundation.lams.tool.sbmt.web.SubmitFilesPedagogicalPlannerAction"
      name="SbmtPedagogicalPlannerForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="false"
    >
      <forward
        name="success"
        path="/authoring/pedagogicalPlannerForm.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/mark"
      type="org.lamsfoundation.lams.tool.sbmt.web.MarkAction"
      name="sbmtMarkForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="listMark"
        path="/monitoring/mark/mark.jsp"
        redirect="false"
      />
      <forward
        name="updateMark"
        path="/monitoring/mark/updatemark.jsp"
        redirect="false"
      />
      <forward
        name="listAllMarks"
        path="/monitoring/mark/allmarks.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/monitoring"
      type="org.lamsfoundation.lams.tool.sbmt.web.MonitoringAction"
      name="SbmtMonitoringForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="listMark"
        path="/monitoring/mark/mark.jsp"
        redirect="false"
      />
      <forward
        name="listAllMarks"
        path="/monitoring/mark/allmarks.jsp"
        redirect="false"
      />
      <forward
        name="success"
        path="/monitoring/monitoring.jsp"
        redirect="false"
      />
      <forward
        name="statistic"
        path="/monitoring/parts/statisticpart.jsp"
        redirect="false"
      />
    </action>

		<!--  ========= Reflection =============== -->
		<action path="/learning/newReflection"
			type="org.lamsfoundation.lams.tool.sbmt.web.ReflectAction"
			name="reflectionForm" 
			validate="false" 
			parameter="newReflection" 
			input="/learner/sbmtlearner.jsp" 
			scope="request">
			<forward name="success" path="/learner/notebook.jsp" />
		</action>
		<action path="/learning/submitReflection"
			type="org.lamsfoundation.lams.tool.sbmt.web.ReflectAction"
			name="reflectionForm" 
			validate="false" 
			input="/learner/notebook.jsp"
			parameter="submitReflection" 
			scope="request">
			<forward name="success" path="/learner.do?method=finish" />
		</action>

<!-- ========== BEGIN: Common ============================== -->
<action path="/clearsession" type="org.lamsfoundation.lams.tool.sbmt.web.ClearSessionAction"></action>

  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

  <message-resources parameter="org.lamsfoundation.lams.tool.sbmt.ApplicationResources" />

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property property="pathnames"
                     value="/WEB-INF/validator-rules.xml,
                            /WEB-INF/validation.xml"/>
  </plug-in>

</struts-config>
