<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.sbmt.SubmitFilesContent"
        table="tl_lasbmt11_content"
    >

        <id
            name="contentID"
            column="content_id"
            type="java.lang.Long"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SubmitFilesContent.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="64"
            not-null="true"
        />

        <property
            name="instruction"
            type="text"
            update="true"
            insert="true"
            column="instruction"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
            length="1"
            not-null="true"
        />

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
            length="1"
        />

        <property
            name="lockOnFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
            length="1"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
        />

        <property
            name="limitUpload"
            type="boolean"
            update="true"
            insert="true"
            column="limit_upload"
        />

        <property
            name="limitUploadNumber"
            type="int"
            update="true"
            insert="true"
            column="limit_upload_number"
        />
        
        <property
            name="useSelectLeaderToolOuput"
            type="boolean"
            update="true"
            insert="true"
            column="use_select_leader_tool_ouput"
        />

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="created"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.sbmt.SubmitUser"
            cascade="save-update"
            
            update="true"
            insert="true"
            column="created_by"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="updated"
        />

        <property
            name="submissionDeadline"
            type="java.util.Date"
            update="true"
            insert="true"
            column="submission_deadline"
        />

        <property
            name="notifyLearnersOnMarkRelease"
            type="boolean"
            update="true"
            insert="true"
            column="mark_release_notify"
        />

        <property
            name="notifyTeachersOnFileSubmit"
            type="boolean"
            update="true"
            insert="true"
            column="file_submit_notify"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SubmitFilesContent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>