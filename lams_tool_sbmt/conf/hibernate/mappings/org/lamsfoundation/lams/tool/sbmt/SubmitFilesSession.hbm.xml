<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.sbmt.SubmitFilesSession"
        table="tl_lasbmt11_session"
    >

        <id
            name="sessionID"
            column="session_id"
            type="java.lang.Long"
        >
            <generator class="assigned">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-SubmitFilesSession.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="status"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="status"
            length="11"
            not-null="true"
        />

        <set
            name="submissionDetails"
            lazy="true"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="session_id"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.sbmt.SubmissionDetails"
            />

        </set>

        <many-to-one
            name="content"
            class="org.lamsfoundation.lams.tool.sbmt.SubmitFilesContent"
            cascade="none"
            
            update="true"
            insert="true"
            column="content_id"
        />

        <property
            name="sessionName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="session_name"
            length="250"
        />
        
        <many-to-one
            name="groupLeader"
            class="org.lamsfoundation.lams.tool.sbmt.SubmitUser"
            cascade="all"
            
            update="true"
            insert="true"
            column="group_leader_uid"
        />
        
       <property
            name="marksReleased"
            type="boolean"
            update="true"
            insert="true"
            column="marks_released"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SubmitFilesSession.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>