<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.forum.persistence.MessageSeq"
        table="tl_lafrum11_message_seq"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-MessageSeq.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="rootMessage"
            class="org.lamsfoundation.lams.tool.forum.persistence.Message"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="root_message_uid"
        />

        <many-to-one
            name="message"
            class="org.lamsfoundation.lams.tool.forum.persistence.Message"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="message_uid"
        />

        <property
            name="messageLevel"
            type="short"
            update="true"
            insert="true"
            column="message_level"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MessageSeq.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
