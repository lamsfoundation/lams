<?xml version="1.0" encoding="ISO-8859-1"?>
<manifest>
  <plugin>
    <name value="LAMS Copy Course Handler"/>
    <handle value="copy-archive"/>
    <description value="Implements hook into BB course cloning system. After BB course is cloned it clones course and all according lessons on LAMS side."/>
    <webapp-type value="javaext"/>
    <version value="0.9"/>
    <requires>
      <bbversion value="9.1"/>
    </requires>
    <vendor>
      <id value="lams"/>
      <name value="LAMS Lesson"/>
      <url value="http://lamscommunity.org/"/>
      <description value="Learning Activity Management System"/>
    </vendor>
    <http-actions>
    </http-actions>

<application-defs>
      <application handle="copy-archive"
                   is-course-tool="true"
                   is-group-tool="false"
                   is-org-tool="false"
                   use-ssl="false"
                   name="LAMS Copy Course Handler"
                   can-allow-guest="false">
        <description>Description</description>
        <links>
        </links>
      </application>
    </application-defs>

    <extension-defs>
      <!-- Cx extension for import export support.-->
      <definition namespace="blackboard.platform">
        <extension id="cxComponentImpl"
                   point="blackboard.platform.cxComponent"
                   class="org.lamsfoundation.ld.cxcomponent.CxComponentImpl"
                   singleton="true"/>
      </definition>
    </extension-defs>

    <permissions>
      <permission type="persist" name="*" actions="create,modify,delete,persist"/>
      <permission type="attribute" name="user.*" actions="get,set"/>
      <permission type="java.util.PropertyPermission" name="*" actions="read,write"/>
      <permission type="java.io.FilePermission" name="&amp;lt;&amp;lt;ALL FILES&amp;gt;&amp;gt;" actions="read,write,delete,execute"/>
      <permission type="java.lang.reflect.ReflectPermission" name="suppressAccessChecks"/>
      <permission type="java.lang.RuntimePermission" name="*"/>
<permission type="java.net.SocketPermission" name="*" actions="connect,resolve"/>
    </permissions>
  </plugin>
</manifest>
