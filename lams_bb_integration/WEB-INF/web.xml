    <url-pattern>/UpdateServerUrl</url-pattern>
  </servlet-mapping>  
  
  <jsp-config>	
		  <taglib>
		    <taglib-uri>/tags-core</taglib-uri>
		    <taglib-location>/WEB-INF/tlds/c.tld</taglib-location>
