<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.rsrc.model.Resource"
        table="tl_larsrc11_resource"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Resource.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.rsrc.model.ResourceUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="runOffline"
            type="boolean"
            update="true"
            insert="true"
            column="run_offline"
        />

        <property
            name="lockWhenFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <property
            name="onlineInstructions"
            type="text"
            update="true"
            insert="true"
            column="online_instructions"
        />

        <property
            name="offlineInstructions"
            type="text"
            update="true"
            insert="true"
            column="offline_instructions"
        />

        <set
            name="attachments"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="create_date desc"
        >

            <key
                column="resource_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.rsrc.model.ResourceAttachment"
            />

        </set>

        <set
            name="resourceItems"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
            order-by="create_date desc"
        >

            <key
                column="resource_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.rsrc.model.ResourceItem"
            />

        </set>

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="allowAddFiles"
            type="boolean"
            update="true"
            insert="true"
            column="allow_add_files"
        />

        <property
            name="allowAddUrls"
            type="boolean"
            update="true"
            insert="true"
            column="allow_add_urls"
        />

        <property
            name="minViewResourceNumber"
            type="int"
            update="true"
            insert="true"
            column="min_view_resource_number"
        />

        <property
            name="runAuto"
            type="boolean"
            update="true"
            insert="true"
            column="allow_auto_run"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Resource.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
