<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.kaltura.model.KalturaItem"
        table="tl_lakalt11_kaltura_item"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-KalturaItem.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="255"
        />

        <property
            name="duration"
            type="int"
            update="true"
            insert="true"
            column="duration"
        />

        <property
            name="entryId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="entry_id"
            length="255"
        />

        <property
            name="sequenceId"
            type="int"
            update="true"
            insert="true"
            column="sequence_id"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.kaltura.model.KalturaUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="createByAuthor"
            type="boolean"
            update="true"
            insert="true"
            column="create_by_author"
        />

        <property
            name="kalturaUid"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="kaltura_uid"
        />

        <property
            name="mark"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="mark"
        />

        <property
            name="hidden"
            type="boolean"
            update="true"
            insert="true"
            column="is_hidden"
        />

        <set
            name="comments"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="create_date asc"
        >

            <key
                column="kaltura_item_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.kaltura.model.KalturaComment"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-KalturaItem.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>