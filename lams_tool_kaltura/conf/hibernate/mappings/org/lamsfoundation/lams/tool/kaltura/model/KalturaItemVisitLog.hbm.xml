<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.kaltura.model.KalturaItemVisitLog"
        table="tl_lakalt11_item_log"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-KalturaItemVisitLog.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="accessDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="access_date"
        />

        <many-to-one
            name="kalturaItem"
            class="org.lamsfoundation.lams.tool.kaltura.model.KalturaItem"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="kaltura_item_uid"
        />

        <many-to-one
            name="user"
            class="org.lamsfoundation.lams.tool.kaltura.model.KalturaUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="user_uid"
        />

        <property
            name="complete"
            type="boolean"
            update="true"
            insert="true"
            column="complete"
        />

        <property
            name="sessionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="session_id"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-KalturaItemVisitLog.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>