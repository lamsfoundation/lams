<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.kaltura.model.KalturaRating"
        table="tl_lakalt11_rating"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-KalturaRating.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="createBy"
            class="org.lamsfoundation.lams.tool.kaltura.model.KalturaUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="rating"
            type="float"
            update="true"
            insert="true"
            column="rating"
        />

        <many-to-one
            name="kalturaItem"
            class="org.lamsfoundation.lams.tool.kaltura.model.KalturaItem"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="kaltura_item_uid"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-KalturaRating.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>