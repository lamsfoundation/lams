<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.taskList.model.TaskList"
        table="tl_latask10_tasklist"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-TaskList.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.taskList.model.TaskListUser"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <set
            name="conditions"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="sequence_id asc"
        >

            <key
                column="taskList_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.taskList.model.TaskListCondition"
            />

        </set>

        <set
            name="taskListItems"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="sequence_id asc"
        >

            <key
                column="taskList_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.taskList.model.TaskListItem"
            />

        </set>

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="lockWhenFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_when_finished"
        />

        <property
            name="allowContributeTasks"
            type="boolean"
            update="true"
            insert="true"
            column="allow_contribute_tasks"
        />

        <property
            name="monitorVerificationRequired"
            type="boolean"
            update="true"
            insert="true"
            column="is_monitor_verification_required"
        />

        <property
            name="sequentialOrder"
            type="boolean"
            update="true"
            insert="true"
            column="is_sequential_order"
        />

        <property
            name="minimumNumberTasks"
            type="int"
            update="true"
            insert="true"
            column="minimum_number_tasks"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
        />

        <property
            name="submissionDeadline"
            type="java.util.Date"
            update="true"
            insert="true"
            column="submission_deadline"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-TaskList.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>