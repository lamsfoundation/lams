<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.taskList.model.TaskListItemComment"
        table="tl_latask10_item_comment"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-TaskListItemComment.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <many-to-one
            name="createBy"
            class="org.lamsfoundation.lams.tool.taskList.model.TaskListUser"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="comment"
            type="text"
            update="true"
            insert="true"
            column="comment"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-TaskListItemComment.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>