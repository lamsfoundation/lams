<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.taskList.model.TaskListCondition"
        table="tl_latask10_condition"
    >

        <id
            name="uid"
            column="condition_uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-TaskListCondition.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
        />

        <set
            name="taskListItems"
            table="tl_latask10_condition_tl_item"
            lazy="true"
            inverse="false"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="condition_uid"
            >
            </key>

            <many-to-many
                class="org.lamsfoundation.lams.tool.taskList.model.TaskListItem"
                column="uid"
                outer-join="auto"
             />

        </set>

        <property
            name="sequenceId"
            type="int"
            update="true"
            insert="true"
            column="sequence_id"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-TaskListCondition.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>