<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.dokumaran.model.DokumaranSession"
        table="tl_ladoku11_session"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-DokumaranSession.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="sessionEndDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="session_end_date"
        />

        <property
            name="sessionStartDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="session_start_date"
        />

        <property
            name="status"
            type="int"
            update="true"
            insert="true"
            column="status"
        />

        <many-to-one
            name="dokumaran"
            class="org.lamsfoundation.lams.tool.dokumaran.model.Dokumaran"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="dokumaran_uid"
        />

        <property
            name="sessionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="session_id"
        />

        <property
            name="sessionName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="session_name"
            length="250"
        />
        
       <many-to-one
            name="groupLeader"
            class="org.lamsfoundation.lams.tool.dokumaran.model.DokumaranUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="group_leader_uid" 
            />
        </many-to-one>
        
        <property
            name="etherpadReadOnlyId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="etherpad_read_only_id"
            length="50"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-DokumaranSession.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
