<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.dokumaran.model.Dokumaran"
        table="tl_ladoku11_dokumaran"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Dokumaran.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.dokumaran.model.DokumaranUser"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="lockWhenFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="showChat"
            type="boolean"
            update="true"
            insert="true"
            column="show_chat"
        />

        <property
            name="showLineNumbers"
            type="boolean"
            update="true"
            insert="true"
            column="show_line_numbers"
        />
        
        <property
            name="sharedPadId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="shared_pad_id"
        />

        <property
            name="useSelectLeaderToolOuput"
            type="boolean"
            update="true"
            insert="true"
            column="use_select_leader_tool_ouput"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Dokumaran.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
