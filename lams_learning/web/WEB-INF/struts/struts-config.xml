<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="activityForm"
      type="org.lamsfoundation.lams.learning.web.form.ActivityForm"
    />
    <form-bean
      name="testDblSubmitForm"
      type="org.lamsfoundation.lams.learning.web.form.TestDblSubmitForm"
    />
    <form-bean
      name="optionsActivityForm"
      type="org.lamsfoundation.lams.learning.web.form.OptionsActivityForm"
    />

   <form-bean name="GroupingForm"  type="org.apache.struts.validator.DynaValidatorForm">
</form-bean>

<form-bean name="GateForm"  type="org.apache.struts.action.DynaActionForm">
	<form-property name="gate" type="org.lamsfoundation.lams.learningdesign.GateActivity" />
	<form-property name="activityId" type="java.lang.Long" />
	<form-property name="waitingLearners" type="java.lang.Integer"/>
	<form-property name="totalLearners" type="java.lang.Integer" />
	<form-property name="startingTime" type="java.util.Date" />
	<form-property name="endingTime" type="java.util.Date" />
</form-bean>

  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <!--
    Define your exceptions in a file called global-exceptions.xml and place
    it in your merge directory.
  -->

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
	<forward name="error" path="/error.jsp" />
	<forward name="noSessionError" path="/noSessionError.jsp" />
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/gate"
      type="org.lamsfoundation.lams.learning.web.action.GateAction"
      name="GateForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <exception
        key="error.system.learner"
        type="org.lamsfoundation.lams.learning.service.LearnerServiceException"
        handler="org.lamsfoundation.lams.learning.util.CustomStrutsExceptionHandler"
        path=".systemError"
        scope="request"
      />
      <forward
        name="permissionGate"
        path=".permissionGate"
        redirect="false"
      />
      <forward
        name="scheduleGate"
        path=".scheduleGate"
        redirect="false"
      />
      <forward
        name="synchGate"
        path=".synchGate"
        redirect="false"
      />
    </action>
    <action
      path="/DisplayOptionsActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayOptionsActivityAction"
      name="optionsActivityForm"
      scope="request"
      input="/Activity.do"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayOptions"
        path=".optionsActivity"
        redirect="false"
      />
    </action>
    <action
      path="/grouping"
      type="org.lamsfoundation.lams.learning.web.action.GroupingAction"
      name="GroupingForm"
      scope="request"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <exception
        key="error.system.learner"
        type="org.lamsfoundation.lams.learning.service.LearnerServiceException"
        handler="org.lamsfoundation.lams.learning.util.CustomStrutsExceptionHandler"
        path=".systemError"
        scope="request"
      />
      <forward
        name="viewGroup"
        path="/grouping.do?method=viewGrouping"
        redirect="false"
      />
      <forward
        name="showGroup"
        path=".showgroup"
        redirect="false"
      />
      <forward
        name="waitGroup"
        path=".waitgroup"
        redirect="false"
      />
    </action>
    <action
      path="/dummylearner"
      type="org.lamsfoundation.lams.learning.web.action.DummyLearnerAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <exception
        key="error.system.learner"
        type="org.lamsfoundation.lams.learning.service.LearnerServiceException"
        handler="org.lamsfoundation.lams.learning.util.CustomStrutsExceptionHandler"
        path=".systemError"
        scope="request"
      />
      <forward
        name="controlActivity"
        path="/dummyControlFrame.jsp"
        redirect="false"
      />
      <forward
        name="displayActivity"
        path="/DisplayActivity.do"
        redirect="false"
      />
    </action>
    <action
      path="/LoadToolActivity"
      type="org.lamsfoundation.lams.learning.web.action.LoadToolActivityAction"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayTool"
        path=".loadToolActivity"
        redirect="false"
      />
    </action>
    <action
      path="/learner"
      type="org.lamsfoundation.lams.learning.web.action.LearnerAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <exception
        key="error.system.learner"
        type="org.lamsfoundation.lams.learning.service.LearnerServiceException"
        handler="org.lamsfoundation.lams.learning.util.CustomStrutsExceptionHandler"
        path=".systemError"
        scope="request"
      />
      <forward
        name="displayActivity"
        path="/DisplayActivity.do"
        redirect="false"
      />
      <forward
        name="welcome"
        path=".welcome"
        redirect="false"
      />
      <forward
        name="exit"
        path="/exit.do"
        redirect="false"
      />
    </action>
    <action
      path="/CompleteActivity"
      type="org.lamsfoundation.lams.learning.web.action.CompleteActivityAction"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/DisplayToolActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayToolActivityAction"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/DisplayActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayActivityAction"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayParallelActivity"
        path="/DisplayParallelActivity.do"
        redirect="false"
      />
      <forward
        name="displayOptionsActivity"
        path="/DisplayOptionsActivity.do"
        redirect="false"
      />
      <forward
        name="loadToolActivity"
        path="/LoadToolActivity.do"
        redirect="false"
      />
      <forward
        name="parallelWait"
        path="/parallelWait.do"
        redirect="false"
      />
      <forward
        name="lessonComplete"
        path="/lessonComplete.do"
        redirect="false"
      />
    </action>
    <action
      path="/test/DblSubmit"
      type="org.lamsfoundation.lams.learning.web.action.TestDblSubmitAction"
      name="testDblSubmitForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="display"
        path="/test/dblSubmitTest.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/DisplayParallelActivity"
      type="org.lamsfoundation.lams.learning.web.action.DisplayParallelActivityAction"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
      <forward
        name="displayParallel"
        path=".parallelActivity"
        redirect="false"
      />
    </action>
    <action
      path="/ChooseActivity"
      type="org.lamsfoundation.lams.learning.web.action.ChooseActivityAction"
      name="activityForm"
      scope="request"
      unknown="false"
      validate="false"
    >
    </action>

<action path="/index"
	type="org.apache.struts.actions.ForwardAction"
	parameter="/main.jsp" />

<action path="/content"
	type="org.apache.struts.actions.ForwardAction"
	parameter=".welcome" />
<action path="/exit"
	type="org.apache.struts.actions.ForwardAction"
	parameter=".exit" />
<action path="/requestDisplay"
	type="org.apache.struts.actions.ForwardAction"
	parameter=".requestDisplay"/>
<action path="/parallelWait"
	type="org.apache.struts.actions.ForwardAction"
	parameter=".parallelWait"/>
<action path="/lessonComplete"
	type="org.apache.struts.actions.ForwardAction"
	parameter=".lessonComplete"/>

  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

<message-resources parameter="org.lamsfoundation.lams.learning.ApplicationResources" />

<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config" value="/WEB-INF/struts/tiles-defs.xml" />
	<set-property property="definitions-debug" value="0" />
	<set-property property="definitions-parser-details" value="0" />
	<set-property property="definitions-parser-validate" value="true" />
</plug-in>

</struts-config>
