<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.qa.QaWizardCognitiveSkill"
        table="tl_laqa11_wizard_cognitive_skill"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-QaWizardCognitiveSkill.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="255"
            not-null="true"
        />

        <many-to-one
            name="category"
            class="org.lamsfoundation.lams.tool.qa.QaWizardCategory"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="category_uid"
        />

        <set
            name="questions"
            lazy="true"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
            order-by="uid asc"
        >

            <key
                column="cognitive_skill_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.qa.QaWizardQuestion"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-QaWizardCognitiveSkill.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>