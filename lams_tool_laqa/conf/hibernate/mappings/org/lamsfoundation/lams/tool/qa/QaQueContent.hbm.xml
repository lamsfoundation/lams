<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
    <class
        name="org.lamsfoundation.lams.tool.qa.QaQueContent"
        table="tl_laqa11_que_content"
    >

    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
        <generator class="native" />
    </id>


	   <property
            name="question"
            type="java.lang.String"
            access="property"
            column="question"
            length="65535"
        />

	    <property
	        name="displayOrder"
	        type="java.lang.Integer"
	        column="display_order"
	        length="5"
	    >
	    </property>

	    <property
	        name="feedback"
	        type="java.lang.String"
	        access="property"
	        column="feedback"
	        length="65535"
	    />

	    <property
	        name="required"
	        type="boolean"
	        access="property"
	        column="answer_required"
	   >
	   </property>

	    <property
	        name="minWordsLimit"
	        type="int"
	        update="true"
	        insert="true"
	        column="min_words_limit"
	    />

        <many-to-one
            name="qaContent"
            class="org.lamsfoundation.lams.tool.qa.QaContent"
            not-null="true"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            access="property"
        >
            <column
                name="qa_content_id" 
            />
        </many-to-one>
    </class>
</hibernate-mapping>
