<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.lamsfoundation.lams.tool.qa.QaContent" 
    table="tl_laqa11_content"
>

    <id
        name="uid"
        type="java.lang.Long"
        column="uid"
    >
        <generator class="native" />
    </id>

	<property
        name="qaContentId"
        type="java.lang.Long"
        column="qa_content_id"
        not-null="true"
        length="20"
    >
    </property>

    <property
        name="title"
        type="java.lang.String"
        access="property"
        column="title"
        length="65535"
    />

    <property
        name="instructions"
        type="java.lang.String"
        access="property"        
        column="instructions"
        length="65535"
    />
    
    <property
        name="reflectionSubject"
        type="java.lang.String"
        access="property"        
        column="reflectionSubject"
        length="65535"
    />


   <property
        name="defineLater"
        type="boolean"
        access="property"
        column="define_later"
   />

    <property
        name="creationDate"
        type="java.util.Date"
        access="property"        
        column="creation_date"
        length="10"
    />

    <property
        name="updateDate"
        type="java.util.Date"
        access="property"        
        column="update_date"
        length="10"
    />

	<property
		name="submissionDeadline"
		type="java.util.Date"
		access="property"  
		column="submission_deadline"
		length="10"
	/>

   <property
        name="questionsSequenced"
        type="boolean"
        access="property"
        column="questions_sequenced"
   />
   
   <property
        name="reflect"
        type="boolean"
        access="property"
        column="reflect"
        length="1"        
   />
   
    <property
        name="usernameVisible"
        type="boolean"
        access="property"        
        column="username_visible"
        length="1"
    />
    
    <property
        name="allowRateAnswers"
        type="boolean"
        access="property"        
        column="allow_rate_answers"
        length="1"
    />
    
    <property
        name="notifyTeachersOnResponseSubmit"
        type="boolean"
        access="property"        
        column="notify_response_submit"
        length="1"
    />

    <property
        name="createdBy"
        type="long"
        access="property"        
        column="created_by"
        length="20"
    />
    
    <property
        name="lockWhenFinished"
        type="boolean"
        access="property"        
        column="lockWhenFinished"
        length="1"
    />
    
	<property
        name="allowRichEditor"
        type="boolean"
        access="property"        
        column="allow_rich_editor"
        length="1"
    />
    
    <property
        name="useSelectLeaderToolOuput"
        type="boolean"
        access="property"        
        column="use_select_leader_tool_ouput"
        length="1"
    />
    
    <property
        name="showOtherAnswers"
        type="boolean"
        access="property"        
        column="showOtherAnswers"
        length="1"
    />
    
    <set
        name="ratingCriterias"
        lazy="true"
        inverse="false"
        cascade="all"
        sort="unsorted"
        order-by="order_id asc"
     >

        <key
            column="tool_content_id"
            property-ref="qaContentId"
        >
        </key>

        <one-to-many
            class="org.lamsfoundation.lams.rating.model.RatingCriteria"
        />
    </set>
        
    <property
        name="maximumRates"
        type="int"
        update="true"
        insert="true"
        column="maximum_rates"
    />

    <property
        name="minimumRates"
        type="int"
        update="true"
        insert="true"
        column="minimum_rates"
    />

   	 <set
            name="qaQueContents"
            lazy="true"
            inverse="true"
            cascade="all"
            order-by="display_order"
        >
              <key
                  column="qa_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.qa.QaQueContent"
              />
    </set>

	<set
            name="qaSessions"
            lazy="true"
            inverse="true"
            cascade="all-delete-orphan"
            sort="unsorted"
        >
              <key
                  column="qa_content_id"
              >
              </key>

              <one-to-many
                  class="org.lamsfoundation.lams.tool.qa.QaSession"
              />

    </set>
    
    <set
            name="conditions"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="org.lamsfoundation.lams.learningdesign.TextSearchConditionComparator"
        >

            <key
                column="content_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.qa.QaCondition"
            />
    </set>

</class>
</hibernate-mapping>
