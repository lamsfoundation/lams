<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

    <form-bean
      name="learningForm"
      type="org.lamsfoundation.lams.tool.zoom.web.forms.LearningForm"
    />
    <form-bean
      name="monitoringForm"
      type="org.lamsfoundation.lams.tool.zoom.web.forms.MonitoringForm"
    />
    <form-bean
      name="authoringForm"
      type="org.lamsfoundation.lams.tool.zoom.web.forms.AuthoringForm"
    />
    <form-bean
      name="adminForm"
      type="org.lamsfoundation.lams.tool.zoom.web.forms.AdminForm"
    />

  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <!--
    Define your exceptions in a file called global-exceptions.xml and place
    it in your merge directory.
  -->

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
	<forward name="test" path="/pages/test.html" />
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/monitoring"
      type="org.lamsfoundation.lams.tool.zoom.web.actions.MonitoringAction"
      name="monitoringForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="false"
    >
      <forward
        name="success"
        path="tiles:/monitoring/main"
        redirect="false"
      />
      <forward
        name="zoom_display"
        path="tiles:/monitoring/zoom_display"
        redirect="false"
      />
    </action>
    <action
      path="/learning"
      type="org.lamsfoundation.lams.tool.zoom.web.actions.LearningAction"
      name="learningForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="true"
    >
      <forward
        name="zoom"
        path="tiles:/learning/main"
        redirect="false"
      />
      <forward
        name="notebook"
        path="tiles:/learning/notebook"
        redirect="false"
      />
      <forward
        name="defineLater"
        path="tiles:/learning/defineLater"
        redirect="false"
      />
      <forward
        name="generalMessage"
        path="tiles:/general/message"
        redirect="false"
      />
    </action>
    <action
      path="/admin/view"
      type="org.lamsfoundation.lams.tool.zoom.web.actions.AdminAction"
      name="adminForm"
      scope="request"
      parameter="view"
      unknown="false"
      validate="false"
    >
      <forward
        name="view-success"
        path="tiles:/admin/view"
        redirect="false"
      />
      <forward
        name="edit-success"
        path="tiles:/admin/edit"
        redirect="false"
      />
      <forward
        name="save-success"
        path="/admin/view.do"
        redirect="true"
      />
    </action>
    <action
      path="/admin/edit"
      type="org.lamsfoundation.lams.tool.zoom.web.actions.AdminAction"
      name="adminForm"
      scope="request"
      parameter="edit"
      unknown="false"
      validate="false"
    >
      <forward
        name="view-success"
        path="tiles:/admin/view"
        redirect="false"
      />
      <forward
        name="edit-success"
        path="tiles:/admin/edit"
        redirect="false"
      />
      <forward
        name="save-success"
        path="/admin/view.do"
        redirect="true"
      />
    </action>
    <action
      path="/admin/save"
      type="org.lamsfoundation.lams.tool.zoom.web.actions.AdminAction"
      name="adminForm"
      scope="request"
      input="tiles:/admin/edit"
      parameter="save"
      unknown="false"
      validate="true"
    >
      <forward
        name="view-success"
        path="tiles:/admin/view"
        redirect="false"
      />
      <forward
        name="edit-success"
        path="tiles:/admin/edit"
        redirect="false"
      />
      <forward
        name="save-success"
        path="/admin/view.do"
        redirect="true"
      />
    </action>
    <action
      path="/clearsession"
      type="org.lamsfoundation.lams.tool.zoom.web.actions.ClearSessionAction"
      unknown="false"
      validate="false"
    >
    </action>
    <action
      path="/authoring"
      type="org.lamsfoundation.lams.tool.zoom.web.actions.AuthoringAction"
      name="authoringForm"
      scope="request"
      parameter="dispatch"
      unknown="false"
      validate="false"
    >
      <forward
        name="success"
        path="tiles:/authoring/main"
        redirect="false"
      />
    </action>

   <action path="/endMeeting"
	type="org.apache.struts.actions.ForwardAction"
	parameter="tiles:/zoom/end_meeting" />
  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

    <message-resources    parameter="org.lamsfoundation.lams.tool.zoom.ApplicationResources"/>

<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml"/>
</plug-in>

</struts-config>
