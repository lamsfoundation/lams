<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.scratchie.model.Scratchie"
        table="tl_lascrt11_scratchie"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Scratchie.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <property
            name="submissionDeadline"
            type="java.util.Date"
            update="true"
            insert="true"
            column="submission_deadline"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <set
            name="scratchieItems"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="order_id asc"
        >

            <key
                column="scratchie_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.scratchie.model.ScratchieItem"
            />

        </set>

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
        />

        <property
            name="extraPoint"
            type="boolean"
            update="true"
            insert="true"
            column="extra_point"
        />

        <property
            name="burningQuestionsEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="burning_questions_enabled"
        />
        
       <property
            name="shuffleItems"
            type="boolean"
            update="true"
            insert="true"
            column="shuffle_items"
        />
        
        <property
            name="timeLimit"
            type="int"
            update="true"
            insert="true"
            column="time_limit"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Scratchie.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>