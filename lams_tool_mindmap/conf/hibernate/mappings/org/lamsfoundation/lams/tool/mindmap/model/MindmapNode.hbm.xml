<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.mindmap.model.MindmapNode"
        table="tl_lamind10_node"
    >

        <id
            name="nodeId"
            column="node_id"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-MindmapNode.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="uniqueId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="unique_id"
        />

        <many-to-one
            name="parent"
            class="org.lamsfoundation.lams.tool.mindmap.model.MindmapNode"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="parent_id"
        />

        <property
            name="text"
            type="java.lang.String"
            update="true"
            insert="true"
            column="node_text"
        />

        <property
            name="color"
            type="java.lang.String"
            update="true"
            insert="true"
            column="node_color"
        />

        <many-to-one
            name="session"
            class="org.lamsfoundation.lams.tool.mindmap.model.MindmapSession"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="session_id"
        />

        <many-to-one
            name="user"
            class="org.lamsfoundation.lams.tool.mindmap.model.MindmapUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="user_id"
        />

        <many-to-one
            name="mindmap"
            class="org.lamsfoundation.lams.tool.mindmap.model.Mindmap"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="mindmap_id"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-MindmapNode.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>