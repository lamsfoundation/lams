<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.wiki.model.Wiki"
        table="tl_lawiki10_wiki"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Wiki.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updateDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <property
            name="createBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="create_by"
            length="20"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="255"
        />

        <property
            name="instructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="instructions"
            length="65535"
        />

        <property
            name="lockOnFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
            length="1"
        />

        <property
            name="allowLearnerCreatePages"
            type="boolean"
            update="true"
            insert="true"
            column="allow_learner_create_pages"
            length="1"
        />

        <property
            name="allowLearnerInsertLinks"
            type="boolean"
            update="true"
            insert="true"
            column="allow_learner_insert_links"
            length="1"
        />

        <property
            name="allowLearnerAttachImages"
            type="boolean"
            update="true"
            insert="true"
            column="allow_learner_attach_images"
            length="1"
        />

        <property
            name="notifyUpdates"
            type="boolean"
            update="true"
            insert="true"
            column="notify_updates"
            length="1"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
            length="1"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
            length="65535"
        />

        <property
            name="minimumEdits"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="minimum_edits"
        />

        <property
            name="maximumEdits"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="maximum_edits"
        />

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
            length="1"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
            length="1"
        />

        <property
            name="toolContentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="tool_content_id"
            length="20"
        />

        <set
            name="wikiSessions"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="wiki_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.wiki.model.WikiSession"
            />

        </set>

        <set
            name="wikiPages"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
            order-by="uid asc"
        >

            <key
                column="wiki_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.wiki.model.WikiPage"
            />

        </set>
        
        <property
            name="submissionDeadline"
            type="java.util.Date"
            update="true"
            insert="true"
            column="submission_deadline"
        />

        <many-to-one
            name="mainPage"
            class="org.lamsfoundation.lams.tool.wiki.model.WikiPage"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="wiki_main_page_uid" 
            />
        </many-to-one>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Wiki.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>