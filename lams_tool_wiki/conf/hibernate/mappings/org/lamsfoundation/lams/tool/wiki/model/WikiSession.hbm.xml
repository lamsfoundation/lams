<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.wiki.model.WikiSession"
        table="tl_lawiki10_session"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-WikiSession.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="sessionEndDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="session_end_date"
        />

        <property
            name="sessionStartDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="session_start_date"
        />

        <property
            name="status"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="status"
            length="11"
        />

        <property
            name="sessionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="session_id"
            length="20"
        />

        <property
            name="sessionName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="session_name"
            length="250"
        />

        <many-to-one
            name="wiki"
            class="org.lamsfoundation.lams.tool.wiki.model.Wiki"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="wiki_uid" 
            />
        </many-to-one>

        <set
            name="wikiUsers"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="wiki_session_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.wiki.model.WikiUser"
            />

        </set>

        <set
            name="wikiPages"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
            order-by="uid asc"
        >

            <key
                column="wiki_session_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.wiki.model.WikiPage"
            />

        </set>

        <many-to-one
            name="mainPage"
            class="org.lamsfoundation.lams.tool.wiki.model.WikiPage"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="wiki_main_page_uid" 
            />
        </many-to-one>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-WikiSession.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>