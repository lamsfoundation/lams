<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.notebook.model.Notebook"
        table="tl_lantbk11_notebook"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Notebook.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updateDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <property
            name="createBy"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="create_by"
            length="20"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="255"
        />

        <property
            name="instructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="instructions"
            length="65535"
        />

        <property
            name="lockOnFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
            length="1"
        />

        <property
            name="allowRichEditor"
            type="boolean"
            update="true"
            insert="true"
            column="allow_rich_editor"
            length="1"
        />

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
            length="1"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
            length="1"
        />

        <property
            name="submissionDeadline"
            type="java.util.Date"
            update="true"
            insert="true"
            column="submission_deadline"
        />

        <property
            name="toolContentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="tool_content_id"
            length="20"
        />

        <set
            name="notebookSessions"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="notebook_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.notebook.model.NotebookSession"
            />

        </set>

        <set
            name="conditions"
            lazy="true"
            cascade="all"
            sort="org.lamsfoundation.lams.learningdesign.TextSearchConditionComparator"
        >

            <key
                column="content_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.notebook.model.NotebookCondition"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Notebook.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>