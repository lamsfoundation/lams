<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.assessment.model.AssessmentQuestionOption"
        table="tl_laasse10_question_option"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-AssessmentQuestionOption.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="sequenceId"
            type="int"
            update="true"
            insert="true"
            column="sequence_id"
        />

        <property
            name="question"
            type="text"
            update="true"
            insert="true"
            column="question"
        />

        <property
            name="optionString"
            type="text"
            update="true"
            insert="true"
            column="option_string"
        />

        <property
            name="optionFloat"
            type="float"
            update="true"
            insert="true"
            column="option_float"
        />

        <property
            name="acceptedError"
            type="float"
            update="true"
            insert="true"
            column="accepted_error"
        />

        <property
            name="grade"
            type="float"
            update="true"
            insert="true"
            column="grade"
        />

        <property
            name="correct"
            type="boolean"
            update="true"
            insert="true"
            column="correct"
        />

        <property
            name="feedback"
            type="text"
            update="true"
            insert="true"
            column="feedback"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AssessmentQuestionOption.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>