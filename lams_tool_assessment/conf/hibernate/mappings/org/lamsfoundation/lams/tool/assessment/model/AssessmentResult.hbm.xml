<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.assessment.model.AssessmentResult"
        table="tl_laasse10_assessment_result"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-AssessmentResult.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="assessment"
            class="org.lamsfoundation.lams.tool.assessment.model.Assessment"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="assessment_uid"
        />

        <many-to-one
            name="user"
            class="org.lamsfoundation.lams.tool.assessment.model.AssessmentUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="user_uid"
        />

        <property
            name="startDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="start_date"
        />

        <property
            name="latest"
            type="boolean"
            update="true"
            insert="true"
            column="latest"
        />

        <property
            name="finishDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="finish_date"
        />

        <property
            name="sessionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="session_id"
        />

        <property
            name="maximumGrade"
            type="int"
            update="true"
            insert="true"
            column="maximum_grade"
        />

        <property
            name="grade"
            type="float"
            update="true"
            insert="true"
            column="grade"
        />

        <set
            name="questionResults"
            lazy="false"
            cascade="all"
            sort="unsorted"
        >

            <key
                column="result_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.assessment.model.AssessmentQuestionResult"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AssessmentResult.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>