<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.assessment.model.AssessmentQuestion"
        table="tl_laasse10_assessment_question"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-AssessmentQuestion.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="type"
            type="short"
            update="true"
            insert="true"
            column="question_type"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="255"
        />

        <property
            name="question"
            type="text"
            update="true"
            insert="true"
            column="question"
        />
        
       	<property 
       		name="questionHash" 
       		type="java.lang.String" 
            update="true"
            insert="true"
       		column="question_hash"
			length="64"
		/>

        <property
            name="sequenceId"
            type="int"
            update="true"
            insert="true"
            column="sequence_id"
        />

        <property
            name="defaultGrade"
            type="int"
            update="true"
            insert="true"
            column="default_grade"
        />

        <property
            name="penaltyFactor"
            type="float"
            update="true"
            insert="true"
            column="penalty_factor"
        />

        <property
            name="answerRequired"
            type="boolean"
            update="true"
            insert="true"
            column="answer_required"
        />

        <property
            name="generalFeedback"
            type="text"
            update="true"
            insert="true"
            column="general_feedback"
        />

        <property
            name="feedback"
            type="text"
            update="true"
            insert="true"
            column="feedback"
        />

        <property
            name="multipleAnswersAllowed"
            type="boolean"
            update="true"
            insert="true"
            column="multiple_answers_allowed"
        />

        <property
            name="incorrectAnswerNullifiesMark"
            type="boolean"
            update="true"
            insert="true"
            column="incorrect_answer_nullifies_mark"
        />

        <property
            name="feedbackOnCorrect"
            type="text"
            update="true"
            insert="true"
            column="feedback_on_correct"
        />

        <property
            name="feedbackOnPartiallyCorrect"
            type="text"
            update="true"
            insert="true"
            column="feedback_on_partially_correct"
        />

        <property
            name="feedbackOnIncorrect"
            type="text"
            update="true"
            insert="true"
            column="feedback_on_incorrect"
        />

        <property
            name="shuffle"
            type="boolean"
            update="true"
            insert="true"
            column="shuffle"
        />

        <property
            name="caseSensitive"
            type="boolean"
            update="true"
            insert="true"
            column="case_sensitive"
        />

        <property
            name="correctAnswer"
            type="boolean"
            update="true"
            insert="true"
            column="correct_answer"
        />

        <property
            name="allowRichEditor"
            type="boolean"
            update="true"
            insert="true"
            column="allow_rich_editor"
        />

        <set
            name="options"
            lazy="false"
            cascade="all"
            sort="unsorted"
            order-by="sequence_id asc"
        >

            <key
                column="question_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.assessment.model.AssessmentQuestionOption"
            />

        </set>

        <set
            name="units"
            lazy="false"
            cascade="all"
            sort="unsorted"
            order-by="sequence_id asc"
        >

            <key
                column="question_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.assessment.model.AssessmentUnit"
            />

        </set>

        <property
            name="maxWordsLimit"
            type="int"
            update="true"
            insert="true"
            column="max_words_limit"
        />

        <property
            name="minWordsLimit"
            type="int"
            update="true"
            insert="true"
            column="min_words_limit"
        />

        <property
            name="hedgingJustificationEnabled"
            type="boolean"
            update="true"
            insert="true"
            column="hedging_justification_enabled"
        />
        
        <property
            name="correctAnswersDisclosed"
            type="boolean"
            update="true"
            insert="true"
            column="correct_answers_disclosed"
        />

        <property
            name="groupsAnswersDisclosed"
            type="boolean"
            update="true"
            insert="true"
            column="groups_answers_disclosed"
        />

    </class>

</hibernate-mapping>