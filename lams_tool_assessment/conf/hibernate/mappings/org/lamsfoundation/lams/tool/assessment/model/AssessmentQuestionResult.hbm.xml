<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.assessment.model.AssessmentQuestionResult"
        table="tl_laasse10_question_result"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-AssessmentQuestionResult.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="assessmentQuestion"
            class="org.lamsfoundation.lams.tool.assessment.model.AssessmentQuestion"
            cascade="none"
            
            update="true"
            insert="true"
            column="assessment_question_uid"
        />

        <many-to-one
            name="assessmentResult"
            class="org.lamsfoundation.lams.tool.assessment.model.AssessmentResult"
            cascade="none"
            
            update="true"
            insert="true"
            column="result_uid"
        />

        <property
            name="answerString"
            type="text"
            update="true"
            insert="true"
            column="answer_string"
        />

        <property
            name="answerFloat"
            type="float"
            update="true"
            insert="true"
            column="answer_float"
        />

        <property
            name="answerBoolean"
            type="boolean"
            update="true"
            insert="true"
            column="answer_boolean"
        />

        <property
            name="submittedOptionUid"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="submitted_option_uid"
        />

        <property
            name="mark"
            type="java.lang.Float"
            update="true"
            insert="true"
            column="mark"
        />

        <property
            name="maxMark"
            type="java.lang.Float"
            update="true"
            insert="true"
            column="max_mark"
        />

        <property
            name="penalty"
            type="java.lang.Float"
            update="true"
            insert="true"
            column="penalty"
        />

        <set
            name="optionAnswers"
            lazy="false"
            cascade="all"
            sort="unsorted"
        >

            <key
                column="question_result_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.assessment.model.AssessmentOptionAnswer"
            />

        </set>

        <property
            name="finishDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="finish_date"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-AssessmentQuestionResult.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>