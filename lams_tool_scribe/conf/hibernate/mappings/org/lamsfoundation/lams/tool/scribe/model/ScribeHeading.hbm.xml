<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.scribe.model.ScribeHeading"
        table="tl_lascrb11_heading"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ScribeHeading.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="headingText"
            type="text"
            update="true"
            insert="true"
            column="heading"
        />

        <many-to-one
            name="scribe"
            class="org.lamsfoundation.lams.tool.scribe.model.Scribe"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="scribe_uid" 
            />
        </many-to-one>

        <property
            name="displayOrder"
            type="int"
            update="true"
            insert="true"
            column="display_order"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ScribeHeading.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>