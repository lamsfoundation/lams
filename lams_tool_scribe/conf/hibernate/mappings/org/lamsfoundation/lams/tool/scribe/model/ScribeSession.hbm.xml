<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.scribe.model.ScribeSession"
        table="tl_lascrb11_session"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ScribeSession.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <version
            name="version"
            column="version"
            type="int"
        />

        <property
            name="sessionEndDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="session_end_date"
        />

        <property
            name="sessionStartDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="session_start_date"
        />

        <property
            name="status"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="status"
            length="11"
        />

        <property
            name="sessionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="session_id"
            length="20"
        />

        <property
            name="sessionName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="session_name"
            length="250"
        />

        <many-to-one
            name="scribe"
            class="org.lamsfoundation.lams.tool.scribe.model.Scribe"
            cascade="none"
            
            update="true"
            insert="true"
        >
            <column
                name="scribe_uid" 
            />
        </many-to-one>

        <set
            name="scribeUsers"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="scribe_session_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.scribe.model.ScribeUser"
            />

        </set>

        <set
            name="scribeReportEntries"
            lazy="true"
            inverse="false"
            cascade="all-delete-orphan"
            sort="unsorted"
        >

            <key
                column="scribe_session_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.scribe.model.ScribeReportEntry"
            />

        </set>

        <many-to-one
            name="appointedScribe"
            class="org.lamsfoundation.lams.tool.scribe.model.ScribeUser"
            cascade="none"
            
            update="true"
            insert="true"
        >
            <column
                name="appointed_scribe_uid" 
            />
        </many-to-one>

        <property
            name="forceComplete"
            type="boolean"
            update="true"
            insert="true"
            column="force_complete"
        />

        <property
            name="reportSubmitted"
            type="boolean"
            update="true"
            insert="true"
            column="report_submitted"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ScribeSession.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>