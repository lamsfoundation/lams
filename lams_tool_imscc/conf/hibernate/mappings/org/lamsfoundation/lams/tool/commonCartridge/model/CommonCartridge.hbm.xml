<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.tool.commonCartridge.model.CommonCartridge"
        table="tl_laimsc11_commoncartridge"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-CommonCartridge.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.commonCartridge.model.CommonCartridgeUser"
            cascade="save-update"
            
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <set
            name="commonCartridgeItems"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="create_date desc"
        >

            <key
                column="commonCartridge_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.commonCartridge.model.CommonCartridgeItem"
            />

        </set>

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="miniViewCommonCartridgeNumber"
            type="int"
            update="true"
            insert="true"
            column="mini_view_commonCartridge_number"
        />

        <property
            name="runAuto"
            type="boolean"
            update="true"
            insert="true"
            column="allow_auto_run"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-CommonCartridge.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>