<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.planner.PedagogicalPlannerSequenceNode"
        table="lams_planner_nodes"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-PedagogicalPlannerSequenceNode.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="parent"
            class="org.lamsfoundation.lams.planner.PedagogicalPlannerSequenceNode"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="FK_lams_planner_node_parent"
            column="parent_uid"
        />

        <property
            name="order"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="order_id"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="briefDescription"
            type="java.lang.String"
            update="true"
            insert="true"
            column="brief_desc"
        />

        <property
            name="fullDescription"
            type="java.lang.String"
            update="true"
            insert="true"
            column="full_desc"
        />

        <property
            name="learningDesignTitle"
            type="java.lang.String"
            formula="( SELECT ld.title FROM lams_learning_design ld WHERE ld.learning_design_id = ld_id )"
            update="false"
            insert="false"
        />

        <set
            name="subnodes"
            lazy="false"
            cascade="all"
            sort="unsorted"
            order-by="order_id asc"
        >

            <key
                column="parent_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.planner.PedagogicalPlannerSequenceNode"
            />

        </set>

        <property
            name="locked"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="locked"
        />

        <property
            name="learningDesignId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="ld_id"
        />

        <property
            name="contentFolderId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="content_folder_id"
        />

        <property
            name="permissions"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="permissions"
        />

        <many-to-one
            name="user"
            class="org.lamsfoundation.lams.usermanagement.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            foreign-key="FK_lams_planner_node_user"
            column="user_id"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-PedagogicalPlannerSequenceNode.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>