<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.planner.PedagogicalPlannerActivityMetadata"
        table="lams_planner_activity_metadata"
    >
        <cache usage="transactional" />

        <id
            name="id"
            column="activity_id"
            type="java.lang.Long"
        >
            <generator class="foreign">
                <param name="property">activity</param>
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-PedagogicalPlannerActivityMetadata.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="collapsed"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="collapsed"
            length="1"
        />

        <property
            name="expanded"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="expanded"
            length="1"
        />

        <property
            name="hidden"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="hidden"
            length="1"
        />

        <property
            name="editingAdvice"
            type="java.lang.String"
            update="true"
            insert="true"
            column="editing_advice"
            length="255"
        />

        <one-to-one
            name="activity"
            class="org.lamsfoundation.lams.learningdesign.ToolActivity"
            cascade="none"
            outer-join="auto"
            constrained="true"
            foreign-key="FK_lams_planner_metadata_primary"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-PedagogicalPlannerActivityMetadata.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>