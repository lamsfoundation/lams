<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.planner.PedagogicalPlannerNodeRole"
        table="lams_planner_node_role"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-PedagogicalPlannerNodeRole.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="node"
            class="org.lamsfoundation.lams.planner.PedagogicalPlannerSequenceNode"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="node_uid"
            not-null="true"
        />

        <many-to-one
            name="user"
            class="org.lamsfoundation.lams.usermanagement.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="user_id"
            not-null="true"
        />

        <many-to-one
            name="role"
            class="org.lamsfoundation.lams.usermanagement.Role"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="role_id"
            not-null="true"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-PedagogicalPlannerNodeRole.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>