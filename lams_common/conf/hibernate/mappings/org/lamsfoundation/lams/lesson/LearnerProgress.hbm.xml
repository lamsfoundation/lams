<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping>
	<!-- 
		Created by the Middlegen Hibernate plugin 2.1
		
		http://boss.bekk.no/boss/middlegen/
		http://www.hibernate.org/
	-->

	<class name="org.lamsfoundation.lams.lesson.LearnerProgress"
		table="lams_learner_progress">

		<id name="learnerProgressId" type="java.lang.Long"
			column="learner_progress_id">
			<generator class="identity" />
		</id>

		<property name="lessonComplete" type="java.lang.Boolean"
			column="lesson_completed_flag" />

		<!-- Associations -->

		<!-- uni-directional one-to-many association to attempted acitivities -->
		<set name="attemptedActivities" lazy="true" batch-size="20"
			cascade="none" table="lams_progress_attempted">
			<key>
				<column name="learner_progress_id" />
			</key>
			<many-to-many column="activity_id"
				class="org.lamsfoundation.lams.learningdesign.Activity" />
		</set>

		<!-- uni-directional one-to-many association to completed activities -->
		<set name="completedActivities" lazy="true" batch-size="20"
			cascade="none" table="lams_progress_completed">
			<key>
				<column name="learner_progress_id" />
			</key>
			<many-to-many column="activity_id"
				class="org.lamsfoundation.lams.learningdesign.Activity" />
		</set>

		<!-- bi-directional many-to-one association to User -->
		<many-to-one name="user"
			class="org.lamsfoundation.lams.usermanagement.User"
			not-null="true">
			<column name="user_id" />
		</many-to-one>

		<!-- bi-directional many-to-one association to Lesson -->
		<many-to-one name="lesson"
			class="org.lamsfoundation.lams.lesson.Lesson" not-null="true">
			<column name="lesson_id" />
		</many-to-one>

		<!-- bi-directional many-to-one association to current activites -->
		<many-to-one name="currentActivity"
			class="org.lamsfoundation.lams.learningdesign.Activity">
			<column name="current_activity_id" />
		</many-to-one>

		<!-- bi-directional many-to-one association to current activites -->
		<many-to-one name="nextActivity"
			class="org.lamsfoundation.lams.learningdesign.Activity">
			<column name="next_activity_id" />
		</many-to-one>

		<many-to-one name="previousActivity"
			class="org.lamsfoundation.lams.learningdesign.Activity">
			<column name="previous_activity_id" />
		</many-to-one>

	</class>
</hibernate-mapping>
