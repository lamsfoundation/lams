<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.integration.ExtServerLessonMap"
        table="lams_ext_server_lesson_map"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ExtServerLessonMap.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="lessonId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="lesson_id"
            not-null="true"
        />
        
        <property
            name="resourceLinkId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="resource_link_id"
        />

        <many-to-one
            name="extServer"
            class="org.lamsfoundation.lams.integration.ExtServer"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="ext_server_org_map_id" 
            />
        </many-to-one>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ExtServerLessonMap.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>