<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.integration.ExtServer"
        table="lams_ext_server_org_map"
    >

        <id
            name="sid"
            column="sid"
            type="java.lang.Integer"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ExtServer.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="serverid"
            type="java.lang.String"
            update="true"
            insert="true"
            column="serverid"
            length="255"
            not-null="true"
            unique="true"
        />

        <property
            name="serverkey"
            type="java.lang.String"
            update="true"
            insert="true"
            column="serverkey"
            length="65535"
            not-null="true"
        />

        <property
            name="servername"
            type="java.lang.String"
            update="true"
            insert="true"
            column="servername"
            length="255"
            not-null="true"
        />

        <property
            name="serverdesc"
            type="java.lang.String"
            update="true"
            insert="true"
            column="serverdesc"
            length="65535"
        />
        
        <property 
        	name="serverTypeId" 
        	type="java.lang.Integer" 
        	column="server_type_id" 
        	length="11" 
        	not-null="true"
        />

        <property
            name="prefix"
            type="java.lang.String"
            update="true"
            insert="true"
            column="prefix"
            length="11"
            not-null="true"
            unique="true"
        />

        <property
            name="userinfoUrl"
            type="java.lang.String"
            update="true"
            insert="true"
            column="userinfo_url"
            length="65535"
            not-null="true"
        />

        <property
            name="serverUrl"
            type="java.lang.String"
            update="true"
            insert="true"
            column="server_url"
            length="255"
            not-null="false"
        />

        <property
            name="timeoutUrl"
            type="java.lang.String"
            update="true"
            insert="true"
            column="timeout_url"
            length="65535"
            not-null="true"
        />

        <property
            name="lessonFinishUrl"
            type="java.lang.String"
            update="true"
            insert="true"
            column="lesson_finish_url"
            length="65535"
            not-null="false"
        />
        
		<property
            name="extGroupsUrl"
            type="java.lang.String"
            update="true"
            insert="true"
            column="ext_groups_url"
            length="65535"
            not-null="false"
        />

        <property
            name="disabled"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="disabled"
            length="1"
            not-null="true"
        />
        
        <property
            name="timeToLiveLoginRequestEnabled"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="time_to_live_login_request_enabled"
            length="1"
            not-null="true"            
        />
        
		<property
            name="timeToLiveLoginRequest"
            type="int"
            update="true"
            insert="true"
            column="time_to_live_login_request"
        />
        
        <property
            name="ltiToolConsumerMonitorRoles"
            type="java.lang.String"
            update="true"
            insert="true"
            column="lti_consumer_monitor_roles"
            length="65535"
            not-null="false"
        />

        <set
            name="extCourseClassMaps"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="ext_server_org_map_id"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.integration.ExtCourseClassMap"
            />

        </set>

        <set
            name="extUserUseridMaps"
            lazy="true"
            inverse="true"
            cascade="none"
            sort="unsorted"
        >

            <key
                column="ext_server_org_map_id"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.integration.ExtUserUseridMap"
            />

        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ExtServer.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
