<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.integration.ExtUserUseridMap"
        table="lams_ext_user_userid_map"
    >

        <id
            name="sid"
            column="sid"
            type="java.lang.Integer"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ExtUserUseridMap.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="extUsername"
            type="java.lang.String"
            update="true"
            insert="true"
            column="external_username"
            length="250"
            not-null="true"
        />

        <many-to-one
            name="user"
            class="org.lamsfoundation.lams.usermanagement.User"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="user_id" 
            />
        </many-to-one>

        <many-to-one
            name="extServer"
            class="org.lamsfoundation.lams.integration.ExtServer"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="ext_server_org_map_id" 
            />
        </many-to-one>
        
        <property
            name="tcGradebookId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="tc_gradebook_id"
            length="250"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ExtUserUseridMap.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>