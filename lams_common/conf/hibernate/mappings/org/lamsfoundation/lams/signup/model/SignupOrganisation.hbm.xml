        <property
            name="addAsStaff"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="add_as_staff"
            length="1"
        />

        <property
            name="addWithAuthor"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="add_with_author"
            length="1"
        />

        <property
            name="addWithMonitor"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="add_with_monitor"
            length="1"
        />

        <property
            name="courseKey"
            type="java.lang.String"
            update="true"
            insert="true"
            column="course_key"
            length="255"
        />

        <property
            name="blurb"
            type="java.lang.String"
            update="true"
            insert="true"
            column="blurb"
            length="2147483647"
        />

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
            length="19"
            not-null="true"
        />

        <property
            name="disabled"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="disabled"
            length="1"
        />
        
        <property
            name="loginTabActive"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="login_tab_active"
            length="1"
        />

        <property
            name="context"
            type="java.lang.String"
            update="true"
            insert="true"
            column="context"
            length="255"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-SignupOrganisation.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
