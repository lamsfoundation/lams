<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.comments.Comment"
        table="lams_comment"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
            </generator>
        </id>

        <property
            name="body"
            type="text"
            update="true"
            insert="true"
            column="body"
        />

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.usermanagement.User"
            cascade="none"
            
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="updatedBy"
            class="org.lamsfoundation.lams.usermanagement.User"
            cascade="none"
            
            update="true"
            insert="true"
            column="update_by"
        />

        <property
            name="lastReplyDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="last_reply_date"
        />

        <property
            name="replyNumber"
            type="int"
            update="true"
            insert="true"
            column="reply_number"
        />

        <property
            name="hideFlag"
            type="boolean"
            update="true"
            insert="true"
            column="hide_flag"
        />

        <many-to-one
            name="parent"
            class="org.lamsfoundation.lams.comments.Comment"
            cascade="none"
            
            update="true"
            insert="true"
            column="parent_uid"
        />


        <many-to-one
            name="session"
            class="org.lamsfoundation.lams.comments.CommentSession"
            cascade="none"
            
            update="true"
            insert="true"
            column="session_id"
        />

        <many-to-one
            name="rootComment"
            class="org.lamsfoundation.lams.comments.Comment"
            cascade="none"
            
            update="true"
            insert="true"
            column="root_comment_uid"
        />

        <many-to-one
            name="threadComment"
            class="org.lamsfoundation.lams.comments.Comment"
            cascade="none"
            
            update="true"
            insert="true"
            column="thread_comment_uid"
        />

        <property
            name="commentLevel"
            type="short"
            update="true"
            insert="true"
            column="comment_level"
        />

        <property
            name="sticky"
            type="boolean"
            update="true"
            insert="true"
            column="sticky"
        />

        <property
            name="monitor"
            type="boolean"
            update="true"
            insert="true"
            column="monitor"
        />

    </class>

</hibernate-mapping>
