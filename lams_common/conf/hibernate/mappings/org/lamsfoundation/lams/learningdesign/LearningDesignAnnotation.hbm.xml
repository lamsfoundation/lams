<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class name="org.lamsfoundation.lams.learningdesign.LearningDesignAnnotation" table="lams_learning_design_annotation">

    <id name="uid" type="java.lang.Long" column="uid">
        <generator class="native" />
    </id>
    <property name="annotationUIID" type="java.lang.Integer" column="ui_id" length="11" />
    
    <property name="learningDesignId" type="java.lang.Long" column="learning_design_id" />
    
    <property name="title" type="java.lang.String" column="title" length="1024" />
    
    <property name="xcoord" type="java.lang.Integer" column="xcoord" length="11" />

    <property name="ycoord" type="java.lang.Integer" column="ycoord" length="11" />

	<property name="endXcoord" type="java.lang.Integer" column="end_xcoord" length="11" />

	<property name="endYcoord" type="java.lang.Integer" column="end_ycoord" length="11" />
	
	<property name="color" type="java.lang.String" column="color" length="7" />
	
	<property name="size" type="java.lang.Short" column="size" />

</class>
</hibernate-mapping>