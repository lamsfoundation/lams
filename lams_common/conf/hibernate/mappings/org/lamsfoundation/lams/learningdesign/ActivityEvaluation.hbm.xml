<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.learningdesign.ActivityEvaluation"
        table="lams_activity_evaluation"
    >

        <id
            name="uid"
            column="activity_evaluation_id"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ActivityEvaluation.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="activity"
            class="org.lamsfoundation.lams.learningdesign.ToolActivity"
            cascade="save-update"
            
            update="true"
            insert="true"
            column="activity_id"
            not-null="true"
        />

        <property
            name="toolOutputDefinition"
            type="java.lang.String"
            update="true"
            insert="true"
            column="tool_output_definition"
            length="255"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ActivityEvaluation.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>