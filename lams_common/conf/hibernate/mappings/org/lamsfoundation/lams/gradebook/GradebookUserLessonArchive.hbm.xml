<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.gradebook.GradebookUserLessonArchive"
        table="lams_gradebook_user_lesson_archive"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        />

        <many-to-one
            name="lesson"
            class="org.lamsfoundation.lams.lesson.Lesson"
            cascade="none"
            
            update="true"
            insert="true"
        >
            <column
                name="lesson_id" 
            />
        </many-to-one>

        <many-to-one
            name="learner"
            class="org.lamsfoundation.lams.usermanagement.User"
            cascade="none"
            
            update="true"
            insert="true"
        >
            <column
                name="user_id" 
            />
        </many-to-one>

        <property
            name="mark"
            type="java.lang.Double"
            update="true"
            insert="true"
            column="mark"
        />

        <property
            name="feedback"
            type="java.lang.String"
            update="true"
            insert="true"
            column="feedback"
            length="65535"
        />
    </class>
</hibernate-mapping>