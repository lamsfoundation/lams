<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>

    <class
        name="org.lamsfoundation.lams.config.Registration"
        table="lams_registration"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Registration.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="siteName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="site_name"
            length="255"
        />

        <property
            name="organisation"
            type="java.lang.String"
            update="true"
            insert="true"
            column="organisation"
            length="255"
        />

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
            length="255"
        />

        <property
            name="email"
            type="java.lang.String"
            update="true"
            insert="true"
            column="email"
            length="255"
        />

        <property
            name="serverCountry"
            type="java.lang.String"
            update="true"
            insert="true"
            column="server_country"
            length="2"
        />

        <property
            name="publicDirectory"
            type="boolean"
            update="true"
            insert="true"
            column="public_directory"
            length="1"
        />

        <property
            name="enableLamsCommunityIntegration"
            type="boolean"
            update="true"
            insert="true"
            column="enable_lams_community"
            length="1"
        />

        <property
            name="serverKey"
            type="java.lang.String"
            update="true"
            insert="true"
            column="server_key"
            length="255"
        />

        <property
            name="serverID"
            type="java.lang.String"
            update="true"
            insert="true"
            column="server_id"
            length="255"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Registration.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>