<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

  <!-- ========== Data Sources Definitions =================================== -->
  <!--
    Define your Struts data sources in a file called struts-data-sources.xml and place
    it in your merge directory.
  -->

  <!-- ========== Form Bean Definitions =================================== -->
  <form-beans>

   <form-bean name="GateForm"  type="org.apache.struts.action.DynaActionForm">
	<form-property name="gate" type="org.lamsfoundation.lams.learningdesign.GateActivity" />
	<form-property name="activityId" type="java.lang.Long" />
	<form-property name="waitingLearners" type="java.lang.Integer"/>
	<form-property name="totalLearners" type="java.lang.Integer" />
	<form-property name="startingTime" type="java.util.Date" />
	<form-property name="endingTime" type="java.util.Date" />
	<form-property name="activityCompletionBased" type="java.lang.Boolean" />
	<form-property name="waitingLearnerList" type="java.util.Collection" />
	<form-property name="forbiddenLearnerList" type="java.util.Collection" />
	<form-property name="allowedToPassLearnerList" type="java.util.Collection" />
	<form-property name="userId" type="java.lang.String" />
	<form-property name="scheduleDate" type="java.lang.String" />
</form-bean>

  </form-beans>

  <!-- ========== Global Exceptions Definitions =================================== -->
  <global-exceptions>
  <exception
    handler="org.lamsfoundation.lams.web.util.CustomStrutsExceptionHandler"
    key="error.system"
    path="/error.jsp"
    scope="request"
    type="java.lang.Exception"/>
</global-exceptions>

  <!-- ========== Global Forward Definitions =================================== -->
  <global-forwards>
      <forward
      	name="error"
      	path=".systemError"
      />
</global-forwards>

  <!-- ========== Action Mapping Definitions =================================== -->
   <action-mappings>
    <action
      path="/monitoring"
      type="org.lamsfoundation.lams.monitoring.web.MonitoringAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="previewdeleted"
        path="/previewdeleted.jsp"
        redirect="false"
      />
      <forward
        name="notsupported"
        path=".notsupported"
        redirect="false"
      />
      <forward
        name="timeChart"
        path="/timeChart.jsp"
        redirect="false"
      />
      <forward
        name="monitorLesson"
        path="/monitor.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/gate"
      type="org.lamsfoundation.lams.monitoring.web.GateAction"
      name="GateForm"
      scope="session"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="viewSynchGate"
        path=".viewSynchGate"
        redirect="false"
      />
      <forward
        name="viewPermissionGate"
        path=".viewPermissionGate"
        redirect="false"
      />
      <forward
        name="viewScheduleGate"
        path=".viewScheduleGate"
        redirect="false"
      />
      <forward
        name="viewConditionGate"
        path=".viewConditionGate"
        redirect="false"
      />
    </action>
    <action
      path="/emailNotifications"
      type="org.lamsfoundation.lams.monitoring.web.EmailNotificationsAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="lessonView"
        path="/emailnotifications/lessonNotifications.jsp"
        redirect="false"
      />
      <forward
        name="courseView"
        path="/emailnotifications/courseNotifications.jsp"
        redirect="false"
      />
      <forward
        name="userList"
        path="/emailnotifications/userList.jsp"
        redirect="false"
      />
      <forward
        name="scheduledEmailList"
        path="/emailnotifications/scheduledEmailList.jsp"
        redirect="false"
      />
     <forward
        name="archivedEmailList"
        path="/emailnotifications/archivedEmailList.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/groupedBranching"
      type="org.lamsfoundation.lams.monitoring.web.GroupBasedBranchingAJAXAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="groupedSelection"
        path="/branching/groupedSelection.jsp"
        redirect="false"
      />
      <forward
        name="viewBranches"
        path=".viewBranches"
        redirect="false"
      />
    </action>
    <action
      path="/grouping"
      type="org.lamsfoundation.lams.monitoring.web.GroupingAJAXAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="viewGroups"
        path=".viewGroups"
        redirect="false"
      />
      <forward
        name="chosenGrouping"
        path="/grouping/chosenGrouping.jsp"
        redirect="false"
      />
    </action>
	<action
      path="/tblmonitor"
      type="org.lamsfoundation.lams.monitoring.web.TblMonitoringAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="tblmonitor"
        path="/tblmonitor/tblmonitor.jsp"
        redirect="false"
      />
      <forward
        name="teams"
        path="/tblmonitor/teams.jsp"
        redirect="false"
      />
      <forward
        name="gates"
        path="/tblmonitor/gates.jsp"
        redirect="false"
      />
      <forward
        name="forum"
        path="/tblmonitor/forum.jsp"
        redirect="false"
      />
      <forward
        name="peerreview"
        path="/tblmonitor/peerreview.jsp"
        redirect="false"
      />
      <forward
        name="sequence"
        path="/tblmonitor/sequence.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/complexProgress"
      type="org.lamsfoundation.lams.monitoring.web.ComplexLearnerProgressAction"
      unknown="false"
      validate="false"
    >
      <forward
        name="complexProgress"
        path=".complexProgress"
        redirect="false"
      />
      <forward
        name="parallelProgress"
        path="/parallelProgress.jsp"
        redirect="false"
      />
    </action>
    <action
      path="/sequence"
      type="org.lamsfoundation.lams.monitoring.web.SequenceAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
      <forward
        name="viewSequence"
        path=".viewSequence"
        redirect="false"
      />
    </action>
    <action
      path="/emailProgress"
      type="org.lamsfoundation.lams.monitoring.web.EmailProgressAction"
      parameter="method"
      unknown="false"
      validate="false"
    >
    	<!-- all calls are ajax calls -->
    </action>

    <!-- If you have non XDoclet actions, define them in a file called struts-actions.xml and place it in your merge directory. -->
  </action-mappings>

   <!-- Define your Struts controller in a file called struts-controller.xml and place it in your merge directory. -->

  <message-resources parameter="org.lamsfoundation.lams.monitoring.ApplicationResources" />

  <!-- ===================== Plugin Definition  ======================== -->
<plug-in className="org.apache.struts.tiles.TilesPlugin">
	<set-property property="definitions-config"
		value="/WEB-INF/tiles-defs.xml" />
	<set-property property="definitions-debug" value="0" />
	<set-property property="definitions-parser-details" value="0" />
	<set-property property="definitions-parser-validate" value="true" />
</plug-in>

</struts-config>
