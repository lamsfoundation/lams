<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.imageGallery.model.ImageGallery"
        table="tl_laimag10_imagegallery"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ImageGallery.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="created"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <property
            name="updated"
            type="java.util.Date"
            update="true"
            insert="true"
            column="update_date"
        />

        <many-to-one
            name="createdBy"
            class="org.lamsfoundation.lams.tool.imageGallery.model.ImageGalleryUser"
            cascade="save-update"
            outer-join="auto"
            update="true"
            insert="true"
            column="create_by"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
        />

        <property
            name="lockWhenFinished"
            type="boolean"
            update="true"
            insert="true"
            column="lock_on_finished"
        />

        <property
            name="instructions"
            type="text"
            update="true"
            insert="true"
            column="instructions"
        />

        <property
            name="nextImageTitle"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="next_image_title"
        />

        <set
            name="imageGalleryItems"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="create_date desc"
        >

            <key
                column="imageGallery_uid"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.tool.imageGallery.model.ImageGalleryItem"
            />

        </set>

        <property
            name="contentInUse"
            type="boolean"
            update="true"
            insert="true"
            column="content_in_use"
        />

        <property
            name="defineLater"
            type="boolean"
            update="true"
            insert="true"
            column="define_later"
        />

        <property
            name="contentId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="content_id"
            unique="true"
        />

        <property
            name="allowShareImages"
            type="boolean"
            update="true"
            insert="true"
            column="allow_share_images"
        />

        <property
            name="allowVote"
            type="boolean"
            update="true"
            insert="true"
            column="allow_vote"
        />

        <property
            name="reflectInstructions"
            type="java.lang.String"
            update="true"
            insert="true"
            column="reflect_instructions"
        />

        <property
            name="reflectOnActivity"
            type="boolean"
            update="true"
            insert="true"
            column="reflect_on_activity"
        />

        <property
            name="allowRank"
            type="boolean"
            update="true"
            insert="true"
            column="allow_rank"
        />

        <set
            name="ratingCriterias"
            lazy="true"
            inverse="false"
            cascade="all"
            sort="unsorted"
            order-by="order_id asc"
        >

            <key
                column="tool_content_id"
				property-ref="contentId"
            >
            </key>

            <one-to-many
                  class="org.lamsfoundation.lams.rating.model.RatingCriteria"
            />

        </set>
        
		<property
            name="maximumRates"
            type="int"
            update="true"
            insert="true"
            column="maximum_rates"
        />

        <property
            name="minimumRates"
            type="int"
            update="true"
            insert="true"
            column="minimum_rates"
        />

        <property
            name="notifyTeachersOnImageSumbit"
            type="boolean"
            update="true"
            insert="true"
            column="image_submit_notify"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ImageGallery.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
