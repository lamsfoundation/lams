<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="centralToolContentHandler" class="org.lamsfoundation.lams.util.CentralToolContentHandler">
	 		<property name="repositoryService"><ref bean="repositoryService"/></property>
	</bean> 
	
	<bean id="centralMessageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename"><value>org.lamsfoundation.lams.central.ApplicationResources</value></property>
	</bean>
	<bean id="centralMessageService" class="org.lamsfoundation.lams.util.MessageService" singleton="true">
		<property name="messageSource"><ref local="centralMessageSource"/></property>										
	</bean>
	
</beans>