<div class="popup toolbar-popup" id="mathjaxModal">
  <div class="popup-content">
    <% e.begin_block("mathjaxPopup"); %>

        <div id="mathjaxWrite">
            <p><h1>Insert LaTeX into this pad</h1></p>

                <select id="mathsymbols" title="General LaTeX symbols">
                  <option title= "">Symbols</option>
                  <option title= "\sqrt{x}">√</option>
                  <option title= "\sqrt[n]{x}">∛</option>
                  <option title= "x^n">x²</option>
                  <option title= "x_n">x₂</option>
                  <option title= "x_a^b">x₂²</option>
                  <option title= "\frac{a}{b}">÷</option>
                  <option title= "\lim_{x \to 0}">limit</option>
                  <option title= "\sum_{a}^{b}">∑</option>
                  <option title= "\int_{a}^{b}">∫</option>
                  <option title= "\oint_{a}^{b}">∮</option>
                  <option title= "\prod_{a}^{b}">∏</option>
                  <option title= "\binom{n}{k}">binom</option>
                  <option title= "\left( \right)">( )</option>
                  <option title= "\left[ \right]">[ ]</option>
                  <option title= "\lceil x \rceil">⌈ x ⌉</option>
                  <option title= "\lfloor x \rfloor">⌊ x ⌋</option>
                  <option title= "\left\{ \right\}">{ }</option>
                  <option title= "\bigcup_{\alpha\in S}">⋃</option>
                  <option title= "\bigcap_{\alpha\in S}">⋂</option>
                  <option title= "\partial">∂</option>
                  <option title= "\infty">∞</option>
                  <option title= "\therefore">∴</option>
                  <option title= "\displaystyle">displaystyle</option>
                  <option title= "\textstyle">textstyle</option>
                  <option title= "\scriptstyle">scriptstyle</option>
                  <option title= "\text{}">text</option>
                  <option title= "\textbf{}">bold</option>
                  <option title= "\textit{}">ital</option>
                  <option title= "\textrm{}">roman</option>
                  <option title= "{\color{red} }">R</option>
                  <option title= "{\color{green} }">G</option>
                  <option title= "{\color{blue} }">B</option>
                </select>

                <select id="greeksymbols" title="Greek characters">
                  <option title="">Greek</option>
                  <optgroup label= "Lowercase">
                    <option title= "\alpha">ɑ</option>
                    <option title= "\beta">β</option>
                    <option title= "\gamma">ɣ</option>
                    <option title= "\delta">δ</option>
                    <option title= "\epsilon">ϵ</option>
                    <option title= "\varepsilon">ε</option>
                    <option title= "\zeta">ζ</option>
                    <option title= "\eta">η</option>
                    <option title= "\theta">θ</option>
                    <option title= "\vartheta">ϑ</option>
                    <option title= "\iota">ι</option>
                    <option title= "\kappa">κ</option>
                    <option title= "\lambda">λ</option>
                    <option title= "\mu">μ</option>
                    <option title= "\nu">ν</option>
                    <option title= "\xi">ξ</option>
                    <option title= "\pi">π</option>
                    <option title= "\varpi">ϖ</option>
                    <option title= "\rho">ρ</option>
                    <option title= "\varrho">ϱ</option>
                    <option title= "\sigma">σ</option>
                    <option title= "\varsigma">ς</option>
                    <option title= "\tau">τ</option>
                    <option title= "\upsilon">υ</option>
                    <option title= "\phi">ϕ</option>
                    <option title= "\varphi">φ</option>
                    <option title= "\chi">χ</option>
                    <option title= "\psi">ψ</option>
                    <option title="\omega">ω</option>
                  </optgroup>
                  <optgroup label="Uppercase">
                    <option title= "\Gamma">Ɣ</option>
                    <option title= "\Delta">Δ</option>
                    <option title= "\Theta">Θ</option>
                    <option title= "\Lambda">Λ</option>
                    <option title= "\Xi">Ξ</option>
                    <option title= "\Pi">Π</option>
                    <option title= "\Sigma">Σ</option>
                    <option title= "\Upsilon">Υ</option>
                    <option title= "\Psi">Ψ</option>
                    <option title= "\Omega">Ω</option>
                  </optgroup>
                </select>
			<!-- LAMS modification: https://lamsdocs.atlassian.net/wiki/spaces/lamsmelcoe/pages/413138945/Mathjax+LaTeX+plugin -->
            <textarea id="mathjaxSrc" rows="10" cols="60" placeholder="Write LaTeX here"></textarea>
            <div>
                <input type="button" class="btn btn-primary mathjaxButton" id="doMathjax" value="Insert ">
                <input type="button" class="btn btn-default mathjaxButton" id="cancelMathjax" value="Cancel">
            </div>

        </div>


        <div id="mathjaxPreview">
            <h2>Mathjax preview</h2>
            <img id="mathjaxPreviewImg">
        </div>
    <% e.end_block(); %>
  </div>
</div>
