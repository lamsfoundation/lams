<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.chat.model.ChatAttachment"
        table="tl_lachat11_attachment"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ChatAttachment.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="fileVersionId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="file_version_id"
            length="20"
        />

        <property
            name="fileType"
            type="java.lang.String"
            update="true"
            insert="true"
            column="file_type"
            length="255"
        />

        <property
            name="fileName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="file_name"
            length="255"
        />

        <property
            name="fileUuid"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="file_uuid"
            length="20"
        />

        <property
            name="createDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="create_date"
        />

        <many-to-one
            name="chat"
            class="org.lamsfoundation.lams.tool.chat.model.Chat"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="chat_uid" 
            />
        </many-to-one>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ChatAttachment.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
