<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.chat.model.ChatMessage"
        table="tl_lachat11_message"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ChatMessage.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="chatSession"
            class="org.lamsfoundation.lams.tool.chat.model.ChatSession"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="chat_session_uid"
            not-null="true"
        />

        <many-to-one
            name="fromUser"
            class="org.lamsfoundation.lams.tool.chat.model.ChatUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="from_user_id" 
            />
        </many-to-one>

        <many-to-one
            name="toUser"
            class="org.lamsfoundation.lams.tool.chat.model.ChatUser"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="to_user_id" 
            />
        </many-to-one>

        <property
            name="type"
            type="java.lang.String"
            update="true"
            insert="true"
            column="type"
            length="255"
        />

        <property
            name="body"
            type="java.lang.String"
            update="true"
            insert="true"
            column="body"
            length="255"
        />

        <property
            name="sendDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="send_date"
        />

        <property
            name="hidden"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="hidden"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ChatMessage.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
