<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="org.lamsfoundation.lams.tool.chat.model.ChatUser"
        table="tl_lachat11_user"
    >

        <id
            name="uid"
            column="uid"
            type="java.lang.Long"
        >
            <generator class="native">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-ChatUser.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="userId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="user_id"
            length="20"
        />

        <property
            name="lastName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="last_name"
            length="255"
        />

        <property
            name="loginName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="login_name"
            length="255"
        />

        <property
            name="firstName"
            type="java.lang.String"
            update="true"
            insert="true"
            column="first_name"
            length="255"
        />

        <property
            name="jabberId"
            type="java.lang.String"
            update="true"
            insert="true"
            column="jabber_id"
            length="255"
        />

        <property
            name="finishedActivity"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="finishedActivity"
        />

        <property
            name="jabberNickname"
            type="java.lang.String"
            update="true"
            insert="true"
            column="jabber_nickname"
        />

        <many-to-one
            name="chatSession"
            class="org.lamsfoundation.lams.tool.chat.model.ChatSession"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
        >
            <column
                name="chat_session_uid" 
            />
        </many-to-one>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ChatUser.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
