<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           				   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- ========================= GENERAL DEFINITIONS ========================= -->

	<!-- ========================= RESOURCE DEFINITIONS ========================= -->


	<!-- ========================= BUSINESS OBJECT DEFINITIONS ======================== -->
	<bean id="gmapService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager"><ref bean="transactionManager"/></property>
		<property name="postInterceptors">
			<list>
				<ref bean="transactionRetryInterceptor" />			
			</list>
		</property>
		<property name ="target">
			<bean class="org.lamsfoundation.lams.tool.gmap.service.GmapService">
				<property name="gmapSessionDAO"><ref bean="gmapSessionDAO"/></property>
				<property name="gmapUserDAO"><ref bean="gmapUserDAO"/></property>
				<property name="gmapDAO"><ref bean="gmapDAO"/></property>
				<property name="gmapMarkerDAO"><ref bean="gmapMarkerDAO"/></property>
				<property name="gmapConfigItemDAO"><ref bean="gmapConfigItemDAO"/></property>
				<property name="toolService"><ref bean="lamsToolService"/></property>
				<property name="learnerService"><ref bean="learnerService"/></property>
 				<property name="gmapToolContentHandler"><ref bean="gmapToolContentHandler"/></property>
		   		<property name="exportContentService"><ref bean="exportToolContentService"/></property> 				
		   		<property name="coreNotebookService"><ref bean="coreNotebookService"/></property>
			</bean>
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="create*">PROPAGATION_REQUIRED</prop>
				<prop key="copy*">PROPAGATION_REQUIRED</prop>
				<prop key="update*">PROPAGATION_REQUIRED</prop>
				<prop key="get*">PROPAGATION_REQUIRED</prop>
				<prop key="save*">PROPAGATION_REQUIRED</prop>
				<prop key="retrieve*">PROPAGATION_REQUIRED</prop>
				<prop key="remove*">PROPAGATION_REQUIRED</prop>
				<prop key="add*">PROPAGATION_REQUIRED</prop>
                <prop key="resetDefineLater">PROPAGATION_REQUIRED,-java.lang.Exception</prop>
				<prop key="leaveToolSession">PROPAGATION_REQUIRED</prop>
                <prop key="exportToolSession">PROPAGATION_REQUIRED</prop>
				<prop key="importToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="exportToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="import102ToolContent">PROPAGATION_REQUIRED</prop>
				<prop key="setReflectiveData">PROPAGATION_REQUIRED</prop>				
			</props>
		</property>
	</bean>
	
	<!--  DAO classes -->
	<bean id="gmapDAO" class="org.lamsfoundation.lams.tool.gmap.dao.hibernate.GmapDAO">
		<property name="sessionFactory"><ref bean="coreSessionFactory"/></property>
	</bean>  
	
	<bean id="gmapMarkerDAO" class="org.lamsfoundation.lams.tool.gmap.dao.hibernate.GmapMarkerDAO">
		<property name="sessionFactory"><ref bean="coreSessionFactory"/></property>
	</bean>  
	
	<bean id="gmapConfigItemDAO" class="org.lamsfoundation.lams.tool.gmap.dao.hibernate.GmapConfigItemDAO">
		<property name="sessionFactory"><ref bean="coreSessionFactory"/></property>
	</bean> 

	<bean id="gmapSessionDAO" class="org.lamsfoundation.lams.tool.gmap.dao.hibernate.GmapSessionDAO">
		<property name="sessionFactory"><ref bean="coreSessionFactory"/></property>
	</bean>
	
	<bean id="gmapUserDAO" class="org.lamsfoundation.lams.tool.gmap.dao.hibernate.GmapUserDAO">
		<property name="sessionFactory"><ref bean="coreSessionFactory"/></property>
	</bean>
	
 	<bean id="gmapToolContentHandler" class="org.lamsfoundation.lams.tool.gmap.util.GmapToolContentHandler">
 		<property name="repositoryService"><ref bean="repositoryService"/></property>
	</bean>  

</beans>
